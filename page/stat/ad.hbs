<div class="table-header">
  <form class="form-inline" action="#/stat/{{id}}/:start/:end/">
    <a class="btn btn-default back-button" href="#/stat/{{start}}/{{end}}"><i class="fa fa-arrow-left"></i> 返回</a>
    <div class="form-group">
      <label for="start">开始时间</label>
      <input id="start" name="start" value="{{start}}" class="datetimepicker form-control" data-default-date="{{start}}" data-format="{{format}}" />
    </div>
    <div class="form-group">
      <label for="end">结束时间</label>
      <input id="end" name="end" value="{{end}}" class="datetimepicker form-control" data-default-date="{{end}}" data-format="{{format}}" />
    </div>
    <button class="btn btn-primary">查询</button>
  </form>
</div>
<table class="table table-bordered table-hover smart-table" data-url="{{API}}stat/{{id}}">
  <caption>{{ad_name}} {{package_id}}</caption>
  <thead>
  <tr>
    <th>日期</th>
    <th>单价</th>
    <th>激活数</th>
    <th>收入</th>
  </tr>
  </thead>
  <tbody>
  <script type="text/x-handlebars-template">
    {{{{raw-helper}}}}
      <tr>
        <td>{{quote_date}}</td>
        <td>{{out_rmb}}元</td>
        <td>{{out_num}}</td>
        <td>{{income}}元</td>
      </tr>
    {{{{/raw-helper}}}}
  </script>
  </tbody>
  <tfoot class="waiting">
  <tr>
    <td colspan="4"><p align="center"><i class="fa fa-spinner fa-spin fa-2x"></i><br>加载中，请稍候</p></td>
  </tr>
  </tfoot>
</table>